{
    "name": "sierratecnologia/operador",
    "description": "Operador para ajudar no desenvolvimento de tasks",
    "type": "library",
    "keywords": [
        "sitec",
        "operador"
    ],
    "license": "ANCAP",
    "homepage": "https://sierratecnologia.com/packages/operador",
    "support": {
        "email": "help@sierratecnologia.com.br",
        "issues": "https://github.com/sierratecnologia/operador/issues",
        "source": "https://github.com/sierratecnologia/operador",
        "docs": "https://github.com/sierratecnologia/operador/blob/master/README.md"
    },
    "authors": [
        {
            "name": "Operador",
            "homepage": "https://sierratecnologia.com.br",
            "email": "contributing@sierratecnologia.com.br"
        }
    ],
    "require": {
        "php": "^7.4",
        "privatejustice/tramite": "dev-master"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Operador\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
     "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "check-style": "phpcs -p --standard=PSR12 src --extensions=php",
        "fix-style": "phpcbf -p --standard=PSR12 src --extensions=php"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../**",
            "options": {
                "symlink": true
            }
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Operador\\OperadorProvider"
            ],
            "dont-discover": [
                "scaffold-interface"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
